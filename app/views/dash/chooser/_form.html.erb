<%= simple_form_for asset, url: chooser_path(asset.id), as: :asset, remote: true, method: :patch, html: {class: "compact"} do |f| %>
  <%= f.input :name %>
  <%= f.input :summary %>
  <div class="row">
    <div class="col-md-6">
      <%= f.input :credit %>
    </div>
    <div class="col-md-6">
      <%= f.input :credit_url %>
    </div>
  </div>
  <%= f.input :published_on, as: :pick_date %>
  <%= f.input :tag_list, hint: "Seperate tags by comma" %>
  <div class="form-footer">
    <%= f.submit t("text.save"), class: "btn btn-primary", data: { disable_with: t("text.saving")} %>
  </div>
<% end %>